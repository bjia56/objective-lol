{
  "name": "objective-lol",
  "displayName": "Objective-LOL Language Support",
  "description": "Language support for Objective-LOL programming language",
  "version": "0.1.0",
  "publisher": "objective-lol-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Language Packs"
  ],
  "keywords": [
    "objective-lol",
    "olol",
    "lolcode",
    "esoteric"
  ],
  "activationEvents": [
    "onLanguage:objective-lol"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "objective-lol",
        "aliases": [
          "Objective-LOL",
          "olol"
        ],
        "extensions": [
          ".olol"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "objective-lol",
        "scopeName": "source.objective-lol",
        "path": "./syntaxes/objective-lol.tmGrammar.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Objective-LOL",
      "properties": {
        "objective-lol.lspPath": {
          "type": "string",
          "default": "olol-lsp",
          "description": "Path to the Objective-LOL LSP server executable"
        },
        "objective-lol.enableLSP": {
          "type": "boolean",
          "default": true,
          "description": "Enable Language Server Protocol support"
        },
        "objective-lol.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}